# App URL (for payment callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT (use a long random string in production)
JWT_SECRET=your-jwt-secret

# Paystack (Nigeria – NGN)
# Get keys: https://dashboard.paystack.com/settings/developers
PAYSTACK_SECRET_KEY=sk_test_xxxx

# Stripe (International – USD)
# Get keys: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxx

# Optional: NGN to USD rate for Stripe (booking total is in NGN, we convert for USD checkout)
# Example: 0.0006 means 1 NGN ≈ 0.0006 USD
NGN_TO_USD_RATE=0.0006

# Email verification (Resend) – https://resend.com
RESEND_API_KEY=re_xxxx
EMAIL_FROM=Nova Rides <noreply@yourdomain.com>

# Optional: AI price recommendation for hosts (OpenAI). If unset, a smart heuristic is used.
# https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-xxxx

# Cron: licence expiry check (call GET /api/cron/check-license-expiry?secret=xxx daily)
CRON_SECRET=your-cron-secret

# Supabase (database for production auth and data)
# Get URL and service role key from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
